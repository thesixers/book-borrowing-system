<div class="create-admin-wrapper">
    <form id="form" class="add-admin">
        <input type="email" name="email" placeholder="Email">
        <input type="name" name="name" placeholder="name">
        <button class="btn">Submit</button>
        <div class="close btn">Close</div>
    </form>
</div>

<div class="book-form-wrapper">
    <form id="form" class="book-form">
        <input type="text" name="title" placeholder="Book Title" required>
        <input type="text" name="author" placeholder="Books Author" required>
        <input type="text" name="genre" placeholder="Genre" required>
        <input type="number" name="total_copies" placeholder="Number of books to add" required min="1">
        <input type="text" name="isbn" placeholder="Book's ISBN" required>
        <input type="number" name="fine" id="fine" placeholder="Overdue fine" required min="1">
        <input type="date" name="published_year" placeholder="published year" required>
        <button>ADD BOOK</button>
        <span class="close-book-form">Close</span>
    </form>
</div>